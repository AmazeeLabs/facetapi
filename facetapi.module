/**
 * Implementation of hook_block().
 */
function facetapi_block($op = 'list', $delta = 0, $edit = array()) {
  switch ($op) {
    case 'list':
      module_load_include('inc', 'facetapi', 'facetapi.block');
      return facetapi_block_info();

